<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thegorgeouscows.team.finalrev">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/splashlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/splashlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".registerDonatorActivity" />
        <activity android:name=".generalPage" />
        <activity android:name=".LandingActivity" />
        <activity android:name=".registerVolunteerActivity" />
        <activity android:name=".registerOrganizationActivity" />
        <activity android:name=".loginActivity"/>
        <activity android:name=".DonatorProfile"
            android:theme="@style/donatorProfileTheme"/>
        <activity android:name=".SlideActivity"
            android:theme="@style/slideTheme"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>